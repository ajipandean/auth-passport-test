extends ./layouts/main.pug

block content
  div(class="container py-5")
    div(class="row justify-content-center")
      div(class="col-sm-6")
        div(class="card")
          div(class="card-header")
            a(class="btn btn-default btn-block", href="/") Back to home
          div(class="card-body")
            h4(class="card-title") Signup
            hr
            form(action="/signup", method="POST")
              div(class="form-group")
                label Email
                input(
                  type="text"
                  name="email"
                  class="form-control"
                  placeholder="Email"
                )
              div(class="form-group")
                label Password
                input(
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                )
              div(class="form-group mb-0")
                button(class="btn btn-primary btn-block", type="submit") Signup
                a(class="btn btn-link btn-block", href="/login") Already have an account? Login

